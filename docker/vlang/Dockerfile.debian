# Generates basic image with compiled V using clang as default
ARG USER=thevlang
FROM ${USER}/vlang:debian-build AS builder 

LABEL org.opencontainers.image.authors="helto4real <helto4real@joysoftware.xyz>, Sandro Martini <sandro.martini@gmail.com>"

WORKDIR /opt/vlang

# Install V
RUN git clone --depth 1 https://github.com/vlang/v /opt/vlang && make && v -version


RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    clang llvm-dev && \
    apt-get clean && rm -rf /var/cache/apt/archives/* && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /src
